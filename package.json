{
  "name": "@danielemariani/ts-event-bus",
  "version": "1.0.1",
  "description": "A typed event bus implementation in TS",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "node_modules/.bin/jest --watch-all",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "author": "Daniele Mariani",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "jest": "^27.4.7",
    "testdouble": "^3.15.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.4"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "roots": [
      "./src"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "uid": "^2.0.0"
  }
}
